{
  "name": "tfm4",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "dev": "yarn run codegen:watch & yarn workspaces foreach -p -v -i run dev",
    "dev:worker": "yarn workspace @tfm4/worker-reservation dev",
    "dev:action": "yarn workspace @tfm4/action dev",
    "dev:front": "yarn workspace @tfm4/front dev",
    "tsc:watch": "tsc --build tsconfig.references.json --watch",
    "tsc:build": "tsc --build tsconfig.references.json",
    "clean": "rimraf packages/**/dist && rimraf packages/**/*.tsbuildinfo",
    "tsc": "exit 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx",
    "codegen": "graphql-codegen --config codegen.ts -r dotenv/config",
    "codegen:watch": "graphql-codegen --config codegen.ts -r dotenv/config"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.8",
    "@graphql-codegen/client-preset": "1.1.1",
    "@graphql-codegen/typescript": "^2.8.1",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "^2.5.6",
    "@graphql-codegen/typescript-react-apollo": "^3.3.6",
    "@types/jest": "^29.2.2",
    "@types/node": "18.11.5",
    "@types/react": "18.0.23",
    "@types/react-dom": "18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "dotenv": "^16.0.3",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "hasura": "^2.0.1",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "4.8.4"
  },
  "workspaces": [
    "packages/**"
  ]
}
