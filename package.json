{
  "name": "tfm4",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "dev": "yarn workspaces foreach -p -v -i run dev",
    "dev:worker": "yarn workspace @tfm4/worker-reservation dev",
    "dev:action": "yarn workspace @tfm4/action dev",
    "dev:front": "yarn workspace @tfm4/front dev",
    "tsc:watch": "tsc --build tsconfig.references.json --watch",
    "tsc:build": "tsc --build tsconfig.references.json",
    "clean": "rimraf packages/**/dist && rimraf packages/**/*.tsbuildinfo",
    "tsc": "exit 0",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts",
    "dump:db:hasura": "curl -XPOST -H \"Content-type: application/json\" -d '{  \"opts\": [\"-O\", \"-x\", \"--schema\", \"public\"],\n  \"clean_output\": true,\n  \"source\": \"default\"\n}' 'http://localhost:8081/v1alpha1/pg_dump' > data/backup/backup-schema.sql",
    "restore:dc:hasura": "docker-compose exec -T postgres_hasura psql -U postgres -d postgres < data/backup/backup-schema.sql",
    "hasura:metadata:export": "curl -d'{\"type\": \"export_metadata\", \"args\": {}}' http://localhost:8081/v1/metadata -o data/metadata/hasura_metadata.json",
    "hasura:metadata:apply": "curl -d'{\"type\":\"replace_metadata\", \"args\":'$(cat data/metadata/hasura_metadata.json)'}' http://localhost:8081/v1/metadata"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.8",
    "@graphql-codegen/client-preset": "1.1.1",
    "@types/node": "18.11.5",
    "@types/react": "18.0.23",
    "@types/react-dom": "18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "4.8.4"
  },
  "workspaces": [
    "packages/**"
  ]
}
