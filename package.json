{
  "name": "tfm4",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "dev": "yarn workspace @tfm4/front next dev & graphql-codegen --config codegen.ts --watch & tsc --build tsconfig.references.json --watch",
    "tsc:watch": "tsc --build tsconfig.references.json --watch",
    "tsc:build": "tsc --build tsconfig.references.json",
    "tsc": "exit 0",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts",
    "dump:db:hasura": "docker-compose exec postgres_hasura pg_dump -U postgres postgres --no-owner | gzip -9  > data/backup/db-backup-$(date +%d-%m-%y).sql.gz"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.8",
    "@graphql-codegen/client-preset": "1.1.1",
    "@types/node": "18.11.5",
    "@types/react": "18.0.23",
    "@types/react-dom": "18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.0",
    "prettier": "^2.7.1",
    "typescript": "4.8.4"
  },
  "workspaces": [
    "packages/**"
  ]
}
